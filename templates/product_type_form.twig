{% extends "layouts/app.twig" %}

{% block title %}
    Tipo de Produto: Editar
{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-warning">
                <h4 class="card-title">Editar Tipo de Produto</h4>
            </div>
            <div class="card-body">
                <form method="POST" action="{{ action }}">
                    <input name="id" value="{{ product_type.id }}" type="hidden">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Nome</label>
                                <input class="form-control" name="name" value="{{ product_type.name }}" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Cor</label>
                                <input class="form-control" name="color" value="{{ product_type.color }}" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Objetivo</label>
                                <input class="form-control" name="target" value="{{ product_type.target }}" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success pull-right" type="submit">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
