{% extends "layouts/app.twig" %}

{% block title %}
    Movimentação: Editar
{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-warning">
                <h4 class="card-title">Editar Movimentação</h4>
            </div>
            <div class="card-body">
                <form method="POST" action="{{ action }}">
                    <input name="id" value="{{ trade.id }}" type="hidden">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-static">Produto</label>
                                <select class="form-control custom-select" name="product_id">
                                    <option value=""></option>
                                    {% for product in products %}
                                        <option value="{{ product.id }}" {{ product.id==trade.product_id ? "selected" : "" }}>{{ product.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Valor</label>
                                <input class="form-control" name="value" value="{{ trade.value | format_number({fraction_digit: 2}) }}" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-static">Data</label>
                                <input class="form-control" name="date" value="{{ trade.date }}" type="date">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success pull-right" type="submit">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
