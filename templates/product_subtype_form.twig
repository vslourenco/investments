{% extends "layouts/app.twig" %}

{% block title %}
    Sub-Tipo de Produto: Editar
{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-warning">
                <h4 class="card-title">Editar Sub-Tipo de Produto</h4>
            </div>
            <div class="card-body">
                <form method="POST" action="{{ action }}">
                    <input name="id" value="{{ product_subtype.id }}" type="hidden">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Nome</label>
                                <input class="form-control" name="name" value="{{ product_subtype.name }}" type="text">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-static">Tipo</label>
                                <select class="form-control custom-select" name="product_type_id">
                                    <option value=""></option>
                                    {% for product_type in product_types %}
                                        <option value="{{ product_type.id }}" {{ product_type.id==product_subtype.product_type_id ? "selected" : "" }}>{{ product_type.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Cor</label>
                                <input class="form-control" name="color" value="{{ product_subtype.color }}" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success pull-right" type="submit">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
<script>

</script>
{% endblock %}
