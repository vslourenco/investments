{% extends "layouts/app.twig" %}

{% block title %}
    Produtos: Lista
{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Produtos</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a href="{{ path_for('products.create') }}">
                            <button class="btn btn-success">
                                <i class="material-icons">add</i>
                                Adicionar Produto
                            </button>
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th class="col-md-7">
                                    Nome
                                </th>
                                <th class="col-md-3">
                                    Tipo
                                </th>
                                <th class="col-md-2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                                <tr>
                                    <td>{{ product.name }}</td>
                                    <td>{{ product.type }}</td>
                                    <td class="text-right">
                                        <a href="{{ path_for('products.edit', {'id': product.id}) }}">
                                            <button class="btn btn-warning btn-link btn-sm" data-original-title="Editar" rel="tooltip" title="" type="button">
                                                <i class="material-icons">create</i>
                                            </button>
                                        </a>
                                        <button class="btn btn-danger btn-link btn-sm" data-original-title="Excluir" rel="tooltip" title="" type="button" onclick="validateDelete('{{ path_for('products.delete', {'id': product.id}) }}')">
                                            <i class="material-icons">delete</i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
